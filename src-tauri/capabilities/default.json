{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "core:path:allow-basename",
    "fs:default",
    "dialog:default",
    {
      "identifier": "fs:allow-read",
      "allow": ["**"]
    },
    "shell:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "binaries/ffmpeg",
          "sidecar": true
        },
        {
          "name": "binaries/ffprobe",
          "sidecar": true
        }
      ]
    }
  ]
}
